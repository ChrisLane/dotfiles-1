#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc node --state \~{floating,fullscreen}

super + Tab
	bspc desktop -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -w last.manual

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}.occupied

super + shift + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
  bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + alt + shift + {h,j,k,l}
  bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

super + {_,shift + }d
	bspc {desktop -f,node -d} Dump

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {resize_side,resize_corner,move}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	termite

# Launcher
super + space
  $scr/launcher.sh

#Volume
XF86Audio{Lower,Raise}Volume
  $scr/vol-control.sh {down,up}
XF86AudioMute
  $scr/vol-control.sh toggle

# Brightness
XF86MonBrightnessUp
  xbacklight -inc 5
XF86MonBrightnessDown
  xbacklight -dec 5

# Change node gaps
alt + {minus,equal}
	bspc config -d focused node_gap $((`bspc config -d focused node_gap` {+,-} 2 ))

# Network dmenu
super + ctrl + c
  nmcli_dmenu

# Quake-like terminal
super + grave
  xdotool search --onlyvisible --classname QuakeTerminal windowunmap \
  || xdotool search --classname QuakeTerminal windowmap \
  || termite --name QuakeTerminal --geometry 960x350+480+$PANEL_HEIGHT -e 'tmux new -s quake'

# Start browser
super + r
  google-chrome-stable &

# Lock screen
super + Delete
  $scr/lock.sh

# Screenshot
super + Print
  import $SCREENSHOT_LOCATION

super + g
  $scr/toggle-gap.sh

super + p
  $scr/switch-window.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

