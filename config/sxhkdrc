#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc node --state \~{floating,fullscreen}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -w last.manual

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -e {west -20,south +20,north -20,east +20}

super + alt + shift + {h,j,k,l}
	bspc node -e {east -20,north +20,south -20,west +20}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

super + {_,shift + }d
	bspc {desktop -f,node -d} Dump

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {resize_side,resize_corner,move}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

# Launcher
super + space
  /home/misha/scripts/launcher.sh

#Volume
XF86Audio{Lower,Raise}Volume
  /home/misha/scripts/vol-{down,up}.sh
XF86AudioMute
  /home/misha/scripts/vol-mute.sh

# Brightness
XF86MonBrightnessUp
  xbacklight -inc 5
XF86MonBrightnessDown
  xbacklight -dec 5

# Change node gaps
alt + {minus,equal}
	bspc config -d focused node_gap $((`bspc config -d focused node_gap` {+,-} 2 ))

# Network dmenu
super + ctrl + c
  nmcli_dmenu

super + shift + Return
  xdotool search --onlyvisible --classname URxvtQuake nodeunmap \
  || xdotool search --classname URxvtQuake nodemap \
  || urxvt -name URxvtQuake -geometry 120x20+411+$BAR_HEIGHT

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# super + shift + q
#   bspc node -c 
# 
# super + {s,f}
#   bspc node -t {floating,fullscreen}
# 
# super + {shift, alt} + {h,j,k,l}
#   bspc node -{s,w} {west,south,north,east}
